<%=render 'layouts/header'%>
<div class="container pkgs new">
  <%=form_for @pkg, url:plat_pkgs_path(@plat) do |f|%>
    <div class="title"><span>上传</span></div>
    <div class="form-group">
      <label for="app_name">应用名称：</label>
        <%= f.text_field :name, class:"form-control", required:true %>
    </div>
    <%=f.submit @pkg.new_record? ? "新建" : "保存", class:"btn btn-primary ui-plat"%>
  <%end%>
</div>