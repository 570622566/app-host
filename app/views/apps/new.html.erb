<%=render 'layouts/header'%>

<div class="container app new">
  <%=form_for @app do |f|%>
    <div class="title"><span>新建应用</span></div>
    <div class="form-group">
      <label for="app_name">应用名称：</label>
        <%= f.text_field :name, class:"form-control", required:true %>
      </div>
      <div class="form-group">
      <label for="app_desc">应用描述：</label>
        <%= f.text_area :desc, class:"form-control",size:"x6", required:true %>
    </div>
    <%=f.submit @app.new_record? ? "新建" : "保存", class:"btn btn-primary"%>
  <%end%>
</div>
