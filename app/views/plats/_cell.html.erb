<div class="col-md-12 cell">
  <a href="<%=plat_pkg_path(@plat,pkg)%>">
    <div class="cell-container">
      <div class="icon">
        <%=image_tag(pkg.icon)%>
      </div>
      <div class="detail">
        <span class="title">
          <%=pkg.name%>
          <span class="date-label">
            <%=time_ago_in_words pkg.created_at %>
          </span>
        </span>
        
        <span class="sub-title">
          版本 <%=pkg.version%>  18.8MB
        </span>
      </div>
    </div>
    <div class="divider"></div>
  </a>
</div>